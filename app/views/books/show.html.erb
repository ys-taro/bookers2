<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render "shared/user_dashboard", book: @new_book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(80, 80) %>
              <br><%= link_to @book.user.name, user_path(@book.user_id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %> </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に削しますか？" }, class: "btn btn-danger btn-sm" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>